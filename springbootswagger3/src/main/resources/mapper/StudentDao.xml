<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.study.module.springbootswagger3.dao.StudentDao">

    <resultMap type="com.study.module.springbootswagger3.entity.Student" id="StudentMap">
        <result property="stuId" column="stu_id" jdbcType="INTEGER"/>
        <result property="stuName" column="stu_name" jdbcType="VARCHAR"/>
        <result property="stuAge" column="stu_age" jdbcType="INTEGER"/>
        <result property="stuSex" column="stu_sex" jdbcType="VARCHAR"/>
        <result property="deleted" column="deleted" jdbcType="INTEGER"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="StudentMap">
        select stu_id,
               stu_name,
               stu_age,
               stu_sex,
               deleted
        from zero.student
        where stu_id = #{stuId}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="StudentMap">
        select stu_id,
               stu_name,
               stu_age,
               stu_sex,
               deleted
        from zero.student
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="StudentMap">
        select
        stu_id, stu_name, stu_age, stu_sex, deleted
        from zero.student
        <where>
            <if test="stuId != null">
                and stu_id = #{stuId}
            </if>
            <if test="stuName != null and stuName != ''">
                and stu_name = #{stuName}
            </if>
            <if test="stuAge != null">
                and stu_age = #{stuAge}
            </if>
            <if test="stuSex != null and stuSex != ''">
                and stu_sex = #{stuSex}
            </if>
            <if test="deleted != null">
                and deleted = #{deleted}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="stuId" useGeneratedKeys="true">
        insert into zero.student(stu_name, stu_age, stu_sex, deleted)
        values (#{stuName}, #{stuAge}, #{stuSex}, #{deleted})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update zero.student
        <set>
            <if test="stuName != null and stuName != ''">
                stu_name = #{stuName},
            </if>
            <if test="stuAge != null">
                stu_age = #{stuAge},
            </if>
            <if test="stuSex != null and stuSex != ''">
                stu_sex = #{stuSex},
            </if>
            <if test="deleted != null">
                deleted = #{deleted},
            </if>
        </set>
        where stu_id = #{stuId}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete
        from zero.student
        where stu_id = #{stuId}
    </delete>

</mapper>
